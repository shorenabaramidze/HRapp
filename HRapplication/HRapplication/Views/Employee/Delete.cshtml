@model HRapplication.Models.EmployeeViewModel 

@{
    ViewData["Title"] = "Delete Employee";
    var errorMessage =TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if(!string.IsNullOrWhiteSpace(@errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
    </div>
}

<form action="Delete" method="post">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">ID Number</label>
        <input type="number" class="form-control" asp-for="IdNumber" pattern="[0-9]{11}" readonly/>
        
    </div>

    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" readonly/>
        
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" readonly/>
        
    </div>

    <div class="mb-3">
        <label class="form-label">Gender</label>
    <div>
        <label class="form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Gender" value="Male">Male
        </label>
        <label class="form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Gender" value="Female">Female
        </label>
    </div>
        

    <div class="mb-3">
        <label class="form-label">BirthDate</label>
        <input type="date" class="form-control" asp-for="Birthdate" readonly/>
    </div>

    <div class="mb-3">
        <label class="form-label">Position</label>
        <input type="text" class="form-control" asp-for="Position" required readonly/>
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select class="form-select" asp-for="Status" required>
            <option value="">Choose...</option>
            <option value="Staff">Staff</option>
            <option value="Non-Staff">Non-Staff</option>
            <option value="Retired">Retired</option>
        </select>
   </div>

    <div class="mb-3">
        <label class="form-label">Retire Date</label>
        <input type="date" class="form-control" asp-for="RetireDate"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Telephone Number</label>
        <input type="tel" class="form-control" asp-for="TelNumber"/>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-danger" onclick="return confirm ('Are you sure to delete employee : @Model.FullName ?' )">Delete</button>
    </div>
</form>
